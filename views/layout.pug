doctype html
html(lang='en')
  head
    title #{title}
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1,maximum-scale=1,user-scalable=no, width=device-width')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='http://code.jquery.com/jquery-3.3.1.js', integrity='sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=', crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    script(src=googleKey)
    script(src='https://use.fontawesome.com/releases/v5.3.1/js/all.js')
    script(src='https://unpkg.com/react@16/umd/react.development.js', crossorigin) 
    script(src='https://unpkg.com/react-dom@16/umd/react-dom.development.js', crossorigin) 
    script(src='https://unpkg.com/axios/dist/axios.min.js')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css')


  body
    div(class='container-fluid')
      div(class='row')
        div(class='col-sm-2')
          block sidebar
            ul(class='sidebar-nav')
              li
                a(href='/catalog') Home
              li
                a(href='/catalog/roaster/list') Roasters
              li
                a(href='/catalog/projects') Projects
              li
                a(href='/catalog/wastes') Waste
              li
                a(href='/catalog/about') About
              if (!currentUser)  
                li
                  a(href='/catalog/login') Login
                li
                  a(href='/catalog/register') Register
              if (currentUser)
                li Signed in as 
                  a(href = '/catalog/user/profile/' + currentUser.username) #{currentUser.username}
                li  
                  a(href = '/catalog/logout') Logout
                  
              

        div(class='col-sm-10')
          block content
